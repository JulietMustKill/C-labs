\\Третий вариант "Найти сумму 2-х матриц"
\\Две матрицы 3х3 с рандомными числами 
#include "stdio.h"
#include "stdlib.h"
#include "time.h"
#include <stdio.h>
int main() {
    int i, j;
    int B[3][3];
    int A[3][3];

    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++)
            A[i][j] = rand() % 10;
    }
    printf("Первая матрица:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++) {
            printf("[%d][%d]=%d ", i, j, A[i][j]);
        }
        printf("\n");
    }
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++)
            B[i][j] = rand() % 10;
    }
    printf("\n");
    printf("Вторая матрица:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++) {
            printf("[%d][%d]=%d ", i, j, B[i][j]);
        }
        printf("\n");
    }
    printf("\n");
    printf("Сумма матриц A и B\n");
    int C[i][j];
    for (int i = 0; i < 3; ++i)
        for (int j = 0; j < 3; ++j)
            C[i][j] = A[i][j] + B[i][j];
    // выводим результат
    for (int i = 0; i < 3; ++i) {
        for (int j = 0; j < 3; ++j){
            printf("[%d][%d]=%d ", i, j, C[i][j]);
        }
        printf("\n");
    }
    getchar();
}
